{% block asmitta_flow_stepList_class %}
	{%- if loop.index == flow.getCurrentStepNumber() -%}
		{{ ' class="asmitta_formflow_current_step"' }}
	{%- elseif flow.isStepSkipped(loop.index) -%}
		{{ ' class="asmitta_formflow_skipped_step"' }}
	{%- elseif flow.isStepDone(loop.index) -%}
		{{ ' class="asmitta_formflow_done_step"' }}
	{%- endif -%}
{% endblock %}

{% block asmitta_flow_stepLabel %}
	{{- stepLabel | trans -}}
{% endblock %}
